<html>

  <head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:400,600,300" rel="stylesheet" type="text/css">

    <style>
    
    body{
      background-color: white;
      margin: auto 0;
      background-image: url('https://image.shutterstock.com/image-photo/luxury-travel-romantic-beach-getaway-260nw-1353370091.jpg');
      background-repeat: no-repeat;
      background-attachment: fixed;  
      background-size: cover;
    }
    nav{
      color: #fff;
    }
    .about-section{
      border-radius:4px;
      border:1px solid #bbb;
      font-family: sans-serif;
      font-size: 1.2rem;
      line-height: 1.5;
      text-align: center;
      margin: 20px;
    }
    body {
  margin: 40px;
  }

  .wrapper {
    display: grid;
    grid-template-columns: 100px 100px 100px;
    grid-gap: 10px;
    background-color: #fff;
    color: #444;
  }

  .box {
    background-color: #444;
    color: #fff;
    border-radius: 5px;
    padding: 20px;
    font-size: 150%;
   }
  .header {
    color: #fff;
  }

   </style>
  </head>
  <body>

    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <div class="container-fluid">
        <a class="navbar-brand" href="/"></a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
          <div class="navbar-nav">
            <a class="nav-link active" aria-current="page" href="#">Home</a>
            <a class="nav-link" href="/login">Log in</a>
            <a class="nav-link" href="/add_list"> Add Space</a>
            <a class="nav-link " href="#places to stay">Places to stay</a>
            <form action="/sessions/destroy" method="post">
            <input type="submit" value="Sign out" />
            </form>
            </div>
        </div>
      </div>
    </nav>
      
    <div class="about-section" id="about" class="center" style="text-align:center";>
      <header class= "header">
      <h1 class="header" style="font-size: 50px;">MAKERSBNB</h1>
      <h3 class="header" >Not sure where to go? Perfect, let us help you.</h3>
      <img src="https://s3.eu-west-1.amazonaws.com/prod.news.product.which.co.uk/news/wp-content/uploads/2020/08/MAIN-villa-with-pool-abroad-960x480.jpg" class="card-img-top">
      </header>
    </div>

  <div class="row" id="places to stay">
    <div class="col-sm-6 mx-auto" >
    <% @list.each do |item| %>
      <div class= "card mt-3 justify-content-center shadow-lg p-3 mb-5 bg-white rounded">
        <div class="card-body">
        <a class="text-decoration-none link-dark" href="/booking_form?id=<%=item.id%>&name=<%=item.name%>&fromdate=<%=item.fromdate%>&todate=<%=item.todate%>" >
          <h5 class="card-title"><%= item.name %></h5>
          <p><b>Description: </b><%= item.description %> </p>
        <p><b>Price per night: </b>Â£<%= item.price %> </p>
        <p><b>Available from: </b><%= item.fromdate%> </p>
        <p><b>Available to: </b><%= item.todate %> </p>
        <a href="/booking_form?id=<%=item.id%>&name=<%=item.name%>&fromdate=<%=item.fromdate%>&todate=<%=item.todate%>" class="btn btn-primary">Book space</a>
        </a>
          </div>
      </div>
      <% end %>
    </div>
  </div>
</body>

</html>

